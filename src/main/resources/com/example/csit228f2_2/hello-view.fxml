<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="560.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228f2_2.HelloController">
   <children>
      <VBox prefHeight="560.0" prefWidth="700.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="newUsername" prefHeight="50.0" prefWidth="200.0" promptText="Enter username..." />
                  <Button fx:id="btnUpdateUsername" mnemonicParsing="false" onAction="#onUpdateUsernameClick" prefHeight="50.0" prefWidth="150.0" text="Update Username">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin></Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="newPassword" prefHeight="50.0" prefWidth="200.0" promptText="Enter password..." />
                  <Button fx:id="btnUpdatePassword" mnemonicParsing="false" onAction="#onUpdatePasswordClick" prefHeight="50.0" prefWidth="150.0" text="Update Password">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnDeleteAccount" mnemonicParsing="false" onAction="#onDeleteAccountClick" prefHeight="50.0" prefWidth="150.0" text="Delete My Account">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Button>
                  <Button fx:id="btnLogout" layoutX="259.0" layoutY="10.0" mnemonicParsing="false" onAction="#onLogoutClick" prefHeight="50.0" prefWidth="150.0" text="Logout" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
